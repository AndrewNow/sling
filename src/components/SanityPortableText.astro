---
import { PortableText } from "astro-portabletext";
const { portableText } = Astro.props;
---

<div class="styled-markdown">
  <PortableText value={portableText} />
</div>

<style is:global lang="scss">
  .styled-markdown {
    & h1,
    h2 {
      text-transform: uppercase;
    }
    & h3 {
      margin-top: 3rem;
      padding-bottom: 1rem;
      margin-bottom: 1rem;
      color: var(--grey-200);
      border-bottom: 1px solid var(--grey-100);
    }
    & h4 {
      color: var(--grey-200);
    }
    em {
      color: var(--grey-200);
    }
    a {
      color: #bbce41;
      text-decoration: none;
      position: relative;
    }
    a::before {
      content: "";
      position: absolute;
      width: 100%;
      height: 1px; /* Adjust this value to control the underline thickness */
      background-color: #bbce41; /* Set the desired underline color */
      bottom: -3px;
      left: 0;
      transform: scaleX(0); /* Initial state: no underline */
      transform-origin: bottom middle;
      opacity: 0;
      transition: all 0.25s ease; /* Add animation to the underline */
    }

    a:hover::before {
      transform: scaleX(1); /* Expand the underline on hover */
      transform-origin: bottom middle;
      opacity: 1;
    }
  }
</style>
