---
import { PortableText } from "astro-portabletext";
const { portableText } = Astro.props;
---

<div class="styled-markdown">
  <PortableText value={portableText} />
</div>

<style is:global lang="scss">
  .styled-markdown {
    h1,
    h2 {
      margin-top: 5rem;
      text-transform: uppercase;
    }
    h2 {
      line-height: 115%;
      margin-bottom: 0.5rem;
    }
    h3 {
      margin-bottom: 1.25rem;
    }

    h4 {
      margin-top: 5rem;
      padding-bottom: 1rem;
      margin-bottom: 1rem;
      color: var(--grey-200);
      border-bottom: 1px solid var(--grey-100);

      em {
        font-family: "akzidenz-regular";
        color: var(--black);
      }
    }
    h5 {
      text-transform: uppercase;
      margin-top: 2rem;
      margin-bottom: 0.5rem;
      font-size: 14px;
      color: var(--grey-200);
    }
    em,
    strong {
      color: var(--grey-300);
      font-style: normal;
      letter-spacing: 0;
      font-weight: unset;
      font-family: "akzidenz-medium";
    }

    ul {
      list-style-type: square;
      margin-top: 0.025rem;
    }

    li {
      margin: 0.5rem 0;
      li {
        margin: 0.5rem 0;
      }
    }

    p > em {
      margin-top: 1rem;
      padding-top: 1rem;
      display: block;
    }

    blockquote {
      font-family: "akzidenz-regular";
      font-size: 14px;
      margin-bottom: 1rem;
      line-height: 150%;
      color: var(--grey-200);
    }

    a {
      color: var(--green-300);
      text-decoration: none;
      position: relative;
    }
    a::before {
      content: "";
      position: absolute;
      width: 100%;
      height: 1px;
      background-color: var(--green-300);
      bottom: -1px;
      left: 0;
      transform: scaleX(0.5);
      transform-origin: bottom middle;
      opacity: 0;
      transition: all 0.25s ease;
    }

    a:hover::before {
      transform: scaleX(1);
      transform-origin: bottom middle;
      opacity: 1;
    }
  }
</style>
