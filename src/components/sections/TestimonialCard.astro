---
import { Image } from "astro:assets";
import Icon from "../icons/index.astro";
const { entry } = Astro.props;
---

<div
  class="select-none w-full flex-[0_0_auto] min-w-0 min-h-0 px-0 mt-4 lg:px-4 lg:mt-0 lg:w-[700px]"
>
  <div
    class="flex flex-col gap-4 lg:gap-8 bg-white rounded-xl lg:rounded-3xl px-8 py-6 lg:px-10 lg:py-8 shadow-[0px_4px_19px_-4px_rgba(0,0,0,0.05)] lg:h-full lg:justify-between"
  >
    <div class="p font-light text-grey-600 user-select-none">
      {entry.quote}
    </div>
    <div class="flex justify-between items-end">
      <div class="h6 text-grey-950">
        <div class="flex gap-[2px] mb-4 scale-[0.6] lg:scale-[0.6] origin-left">
          <Icon icon="Star" />
          <Icon icon="Star" />
          <Icon icon="Star" />
          <Icon icon="Star" />
          <Icon icon="Star" />
        </div>
        {entry.name}
        <br />{" "}
        <span class="text-grey-300 h6">{entry.title}</span>
      </div>
      {
        entry.logo && (
          <Image
            src={entry.logo}
            alt={entry.name}
            width={200}
            height={100}
            quality="100"
            class="object-contain max-w-[60px] lg:max-w-[80px] w-auto h-[40px]"
          />
        )
      }
    </div>
  </div>
</div>
