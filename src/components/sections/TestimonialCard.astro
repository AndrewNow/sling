---
import { Image } from "astro:assets";
import Icon from "../icons/index.astro";
const { entry } = Astro.props;
---

<div
  class="select-none w-full lg:w-[400px] embla__slide flex-[0_0_100%] min-w-0 sm:flex-[0_0_100%] lg:flex-[0_0_33.33%] px-3"
>
  <div
    class="flex h-full flex-col justify-between gap-8 bg-white p-4 rounded-[26px] px-10 py-8 shadow-[0px_4px_19px_-4px_rgba(0,0,0,0.05)]"
  >
    <div class="small text-grey-500 user-select-none !tracking-[0.01em]">
      {entry.quote}
    </div>
    <div class="flex justify-between items-end">
      <div class="p text-grey-950">
        <div class="flex gap-[2px] mb-4">
          <Icon icon="Star" />
          <Icon icon="Star" />
          <Icon icon="Star" />
          <Icon icon="Star" />
          <Icon icon="Star" />
        </div>
        {entry.name}
        <br />{" "}
        <span class="text-grey-500 p font-sf-regular">{entry.title}</span>
      </div>
      {
        entry.logo && (
          <Image
            src={entry.logo}
            alt={entry.name}
            width={200}
            height={100}
            quality="100"
            class="object-contain max-w-[100px] w-auto h-10"
          />
        )
      }
    </div>
  </div>
</div>
