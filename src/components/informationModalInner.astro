  </button>
</div>

<style lang="scss">
  .modal-inner {
    background: white;
    padding: 1.25rem;
    h3 {
      letter-spacing: unset;
    }
  }

  .details {
    margin: 3rem 0;
    h4 {
      margin-bottom: 0.75rem;
      font-size: 20px;
      font-family: Arial, sans-serif;
      letter-spacing: -0.01rem;
    }
    a {
      font-size: 20px;
      font-family: "Arial-narrow";
    }
  }

  .details-flex {
    display: inline-flex;
    align-items: flex-start;
    align-content: flex-start;
    gap: 9px;
    flex-wrap: wrap;
  }

  .details-item {
    border-radius: 4px;
    padding: 3px 9px;
    font-size: 15px;
    font-family: "Arial-narrow";
    background: var(--grey-50);
    color: var(--grey-300);
  }

  .contact {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 7px;
    border-radius: 8px;
    border: 1.553px solid #e1e31b;
    background: linear-gradient(180deg, #f5f83d 0%, #e1e31b 100%);
    box-shadow:
      0px 0px 0.94452px 0.70839px rgba(255, 255, 255, 0.5) inset,
      0px -0.94452px 0.94452px 0.23613px #b3b515 inset;
    width: 80%;
    margin: 6rem auto;
    margin-bottom: 9rem;
    padding: 1rem;
    font-family: Arial, sans-serif;
    font-size: 20px;
    color: #5a5b0b;
  }
</style>

<script>
  import { animate } from "motion";

  document
    .getElementById("copy-button")
    .addEventListener("click", async function () {
      const textToCopy = document.getElementById("text-to-copy").innerText;
      const success = document.getElementById("copy-success");
      try {
        // Use the asynchronous Clipboard API to copy text
        await navigator.clipboard.writeText(textToCopy);

        // Provide visual feedback to the user (optional)
        animate(
          success,
          {
            transform: "translate(-300%, -50%) rotate(30deg)",
          },
          {
            duration: 5,
          }
        ).finished.then(() => {
          animate(
            success,
            {
              transform: "translate(100%, -50%) rotate(30deg)",
            },
            { duration: 0 }
          );
        });
        // alert("Text has been copied to the clipboard!");
      } catch (err) {
        // Handle any errors
        console.error("Unable to copy text: ", err);
      }
    });
</script>
