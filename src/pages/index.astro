<script>
	import { animate, stagger, scroll } from "motion"

	const char = document.querySelectorAll('.char')
	const header = document.querySelector('.sling-header')
	const scrollArea = document.querySelector('.section-1')
	



char.forEach((ch, i) => {

	const index = i + 1

	const transform = `translateY(-${(index * 0) + 0}vh)`
	const scale = `scaleY(${(index * 0) + 3})`

	scroll(
		animate(char[i], {
			transform: `${transform} ${scale}`
