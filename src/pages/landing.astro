---
import Carousel from "../components/Carousel.astro";
import SlingLogo from "../components/SlingLogo.astro";
import Layout from "../layouts/BaseLayout.astro";
import Loader from "../components/Loader.astro";
---

<Layout data={false}>
  <!-- <Loader /> -->
  <div
    class="relative z-10 bg-white w-full mb-[25vh] rounded-2xl overflow-hidden"
  >
    <Carousel />
    <section class="m-[1.5%] relative z-10 max-w-[580px] font-sans">
      <h1 class="mt-16 text-[36px] leading-[125%] font-sans font-light text-pretty">
        Trusted by founders and startups, Sling specializes in compelling
        product design & online experiences.
      </h1>
      <div class="mt-6 flex gap-4">
        <a
          class="rounded-lg border border-[#2e2d2e] bg-gradient-to-b from-[#3e3d3e] via-[#403e40] to-[#5e5d5e] shadow-[inset_0px_-2px_2px_0.5px_#000,inset_0px_0px_2px_1px_rgba(255,255,255,0.5)] text-white py-2 px-4 text-center font-sans text-sm font-normal leading-[150%]"
          >Book a call
        </a>
        <a
          class="rounded-lg border border-[#e1e1e1] bg-gradient-to-b from-[#f8f8f8] to-[#fefefe] shadow-[inset_0px_0px_10px_0px_#fcfcfc,inset_0px_-1px_1px_1px_#b0b0b0] py-2 px-4 text-center font-sans text-sm font-normal leading-[150%]"
          >Copy email</a
        >
      </div>

      <div class="py-20">
        <div class="py-4">
          <h2 class="leading-[125%] text-2xl font-thin m-0">
            We charge $4,995 per month.
          </h2>
          <h2 class="leading-[125%] text-2xl font-thin m-0">
            Projects take 1-3 months on average.
          </h2>
          <p class="text-[16px] leading-[140%] font-light text-[#808080] mt-4 text-balance">
            In a sea of online content, we strive to create work that is
            thoughtful, intuitive and lasting. This means taking on projects we
            believe in, for people we care about. Custom pricing available upon
            request.
          </p>
        </div>

        <div class="py-4">
          <h2 class="leading-[125%] text-2xl font-thin m-0">Services</h2>
          <ul class="list-none py-4 m-0">
            <li class="text-[16px] leading-[125%] text-[#808080]">
              Web development
            </li>
            <li class="text-[16px] leading-[125%] text-[#808080]">
              Web design
            </li>
            <li class="text-[16px] leading-[125%] text-[#808080]">Branding</li>
            <li class="text-[16px] leading-[125%] text-[#808080]">
              Pitch decks
            </li>
            <li class="text-[16px] leading-[125%] text-[#808080]">
              Design systems
            </li>
            <li class="text-[16px] leading-[125%] text-[#808080]">
              Product design
            </li>
            <li class="text-[16px] leading-[125%] text-[#808080]">
              UX consulting
            </li>
          </ul>
        </div>
      </div>
    </section>
  </div>
  <div
    class="grid place-items-center h-[25vh] fixed bottom-0 w-full z-[1] bg-gradient-to-r from-[#6980fa] to-[#8195ff] text-white"
  >
    <div class="flex items-center justify-between w-[98%] mx-auto">
      <SlingLogo color="white" />
      hello@sling.online
    </div>
  </div>
</Layout>
