---
import Experience from "../components/experience.astro";
import Layout from "../layouts/BaseLayout.astro";
---

<Layout>
  <div class="scroll-container">
    <div class="webgl-wrapper">
      <div class="blur-layer">
        <Experience />
      </div>
    </div>
  </div>
  <div class="text-content">
    <div class="bio">
      <h2 class="bio-main">
        ‚á® Sling partners with meaningful startups and impassioned individuals üó©,
        reliably developing digital solutions and compelling online experiences.
        üåé
      </h2>
    </div>
    <div class="sub-bio">
      <h2 class="">
        We believe in focusing on relationships that foster meaningful work and
        giving projects the careful attention they deserve. <br />
        <br />
         In a sea of online content, we strive to create work that is
        thoughtful, intuitive and lasting. This means taking on projects we
        believe in, for people we care about.
      </h2>
      <span class="flag"> ‚öê</span>
    </div>
  </div>
</Layout>

<style>
  .webgl-wrapper {
    height: 90vh;
    width: 100%;
    position: fixed;
    top: 0;
  }
  .scroll-container {
    height: 97vh;
  }

  .blur-layer {
    z-index: 2;
    width: 100%;
    height: 100%;
    height: 100vh;
    top: 0;
    left: 0;
    position: relative;
  }

  .sling-header {
    font-size: 400px;
    letter-spacing: -1rem;
    font-family: "arial-narrow";
    display: flex;
    align-items: center;
    justify-content: center;
    /* position: relative; */
    position: sticky;
    top: 20vh;
    width: 100%;
    margin: 0 auto;
    padding-top: 10vh;
    text-align: center;
    /* outline: 1px solid; */
  }
  .char {
    display: block;
    transform-origin: bottom center;
  }

  .text-content {
    margin: 0 auto;
    /* margin-top: 90vh; */
    width: 100%;
    padding-bottom: 5rem;
    margin-bottom: 90vh;
    /* border-radius: 45px; */
    /* background: var(--grey-400); */
    background: var(--white);
    /* color: var(--white); */
    color: var(--black);
    position: relative;
    border-top: 1px solid var(--grey-100);
    /* border-top: 3px solid black; */
  }
  .bio {
    position: relative;
    width: 90%;
    height: 250vh;
    margin: 10rem auto;
  }

  .bio-main {
    position: sticky;
    top: 50%;
    transform: translateY(-50%);
  }

  .bio > h2 {
    font-family: "items-thin";
    font-size: 80px;
    width: 90%;
    margin: 0 auto;
  }

  .bio > h2::first-letter {
    margin-left: 4rem;
  }

  .sub-bio {
    width: 63%;
    margin: 10rem auto;
    font-size: 40px;
    font-family: "items-thin";

    h2 {
      font-family: "items-thin";
      font-size: 40px;
      &:first-letter {
        margin-left: 4rem;
      }
    }

    .flag {
      margin: 5rem auto;
      display: inline-block;
      width: 100%;
      text-align: center;
      font-size: 80px;
    }
  }
  .sub-bio > h4::first-letter {
    margin-left: 4rem;
  }
</style>

<script>
  import { animate, scroll, stagger } from "motion";

  const textBio = document.querySelector(".bio-main");
  const sentence =
    "‚á® Sling partners with meaningful startups and impassioned individuals üó©, reliably developing digital solutions and compelling online experiences. üåé";

  const characterArray = Array.from(sentence);
  const htmlString = characterArray
    .map((char) => `<span id="main-bio-char">${char}</span>`)
    .join("");

  textBio.innerHTML = htmlString;

  const characters = document.querySelectorAll("#main-bio-char");
  const scrollContainer = document.querySelector(".bio");

  characters.forEach((char, i) => {
    const index = i + 1;
    scroll(
      animate(
        char,
        {
          opacity: [0, 1],
        },
        {
          delay: index * 0.001,
          // duration: 0,
        }
      ),
      { target: scrollContainer }
    );
  });

  const blurDiv = document.querySelector(".blur-layer");
  const blurDivContainer = document.querySelector(".scroll-container");

  scroll(
    animate(blurDiv, {
      filter: [`blur(20px)`, `blur(0px)`],
    }),
    { target: blurDivContainer, offset: ["0.99 0", "1 1"] }
  );
</script>
