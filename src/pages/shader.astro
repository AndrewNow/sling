<style>
  .webgl-wrapper {
    height: 90vh;
    position: fixed;
    top: 0;
    border-radius: 40px;
  }
  
  .sling-header {
    font-size: 400px;
    letter-spacing: -1rem;
    font-family: "arial-narrow";
    display: flex;
    align-items: center;
    justify-content: center;
    /* position: relative; */
    position: sticky;
    top: 20vh;
    width: 100%;
    margin: 0 auto;
    padding-top: 10vh;
    text-align: center;
    /* outline: 1px solid; */
  }
  .char {
    display: block;
    transform-origin: bottom center;
  }

  .text-content {
    margin-top: 90vh;
    padding-bottom: 10rem;
    background: var(--grey-400);
    backdrop-filter: blur(40px);
    color: var(--white);
    position: relative;
    width: 100%;
    border-top: 3px solid black;
  }
  .bio {
    position: relative;
    width: 90%;
    margin: 10rem auto;
  }

  .bio > h2 {
    font-family: "items-thin";
    font-size: 80px;
    width: 90%;
    margin: 0 auto;
  }

  .bio > h2::first-letter {
    margin-left: 4rem;
  }

  .sub-bio {
    width: 63%;
    margin: 10rem auto;
    font-size: 40px;
    font-family: "items-thin";

    h2 {
      font-family: "items-thin";
      font-size: 40px;
      &:first-letter {
        margin-left: 4rem;
      }
    }

    .flag {
      margin: 5rem auto;
      display: inline-block;
      width: 100%;
      text-align: center;
      font-size: 80px;
    }
  }
  .sub-bio > h4::first-letter {
    margin-left: 4rem;
  }
</style>

